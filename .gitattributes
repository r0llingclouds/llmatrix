# Git attributes for Pygame projects

# Set default behavior to automatically normalize line endings
* text=auto

# Python source files
*.py text diff=python
*.pyx text diff=python
*.pyw text diff=python

# Documentation
*.md text diff=markdown
*.txt text
*.rst text
LICENSE text

# Data files
*.json text
*.yaml text
*.yml text
*.xml text
*.csv text

# Scripts
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf

# Git config
.gitattributes text
.gitignore text
.gitconfig text

# Pygame specific binary files - don't normalize line endings
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.bmp binary

# Audio files
*.mp3 binary
*.wav binary
*.ogg binary

# Font files
*.ttf binary
*.otf binary

# Compiled Python files
*.pyc binary
*.pyd binary
*.pyo binary
__pycache__/* binary

# Distribution / packaging
*.pkl binary
*.pickle binary
*.db binary
*.sqlite binary
*.sqlite3 binary

# If you use git-lfs, uncomment these lines
# *.png filter=lfs diff=lfs merge=lfs -text
# *.jpg filter=lfs diff=lfs merge=lfs -text
# *.wav filter=lfs diff=lfs merge=lfs -text
# *.mp3 filter=lfs diff=lfs merge=lfs -text
# *.ogg filter=lfs diff=lfs merge=lfs -text
